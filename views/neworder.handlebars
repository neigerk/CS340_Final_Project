<h2> Add a New Order</h2>
<form id='add_new_order' action='' method='post'>
    <label for="customer">Customer: </label>
    <select name="customer">
        <option value=''>Null</option>
        {{#each customer}}
        <option value={{cid}}>{{first_name}} {{last_name}}</option>
        {{/each}}
    </select><br>
    <label for="Pizza 1">Pizza 1: </label>
    <select name="pizza1" onchange="updatePrice()">
        <option value=''>Null</option>
        {{#each pizza}}
        <option id='p1' value={{pid}}>{{pizza_name}} {{pizza_price}}</option>
        {{/each}}
    </select><br>
     <label for="Pizza 2">Pizza 2: </label>
    <select name="pizza2" onchange="updatePrice()">
        <option value=''>Null</option>
