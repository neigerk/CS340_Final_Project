        {{/each}}
    </select><br>
    <label for="Pizza 3">Pizza 3: </label>
    <select name="pizza3" onchange="updatePrice()">
        <option value=''>Null</option>
        {{#each pizza}}
        <option id='p3' value={{pid}}>{{pizza_name}} {{pizza_price}}</option>
        {{/each}}
    </select><br>
    <label for="total">Total: </label>
    <label id='total_price' > 0 </label><br>
    <input type="submit" value="Submit">
</form>

